{
    "name": "listicle-react",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "axios": "^0.19.0",
        "bootstrap": "^4.3.1",
        "jwt-decode": "^2.2.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.1",
        "react-scripts": "3.0.1",
        "react-toastify": "^5.3.2",
        "redux": "^4.0.1",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0"
    },
    "proxy": "https://listicle-backend.herokuapp.com/",
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom --coverage a",
        "eject": "react-scripts eject"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!<rootDir>/src/App.js",
            "!<rootDir>/src/utils/setAuthToken.js",
            "!<rootDir>/src/validation/isEmpty.js",
            "!<rootDir>/src/index.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 20,
                "functions": 20,
                "lines": 20,
                "statements": 20
            }
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "json-server": "^0.15.0",
        "moxios": "^0.4.0",
        "npm-run-all": "^4.1.5",
        "react-test-renderer": "^16.8.6",
        "redux-mock-store": "^1.5.3"
    }
}
